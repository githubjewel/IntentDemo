<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    tools:context=".SecondActivity">


    <LinearLayout
        android:id="@+id/firstField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mobiletxt"
            android:textColor="#FFFF"
            android:text="MobileNo : "
            android:layout_width="0dp"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"/>

        <TextView
            android:id="@+id/mobileNumber"
            android:text="MobileNumber"
            android:paddingLeft="4dp"
            android:textColor="#FFFF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"/>

        <Button
            android:id="@+id/call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Call"/>

        <Button
            android:id="@+id/sms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SMS"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondField"
        android:layout_below="@id/firstField"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/emailtxt"
            android:textColor="#FFFF"
            android:layout_marginLeft="8dp"
            android:text="Email : "
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/emailAddress"
            android:text="Email Address"
            android:textColor="#FFFF"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/sendEmail"
            android:text="Send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".75"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdField"
        android:layout_below="@id/secondField"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/urltxt"
            android:text="URL : "
            android:layout_marginLeft="8dp"
            android:textColor="#FFFF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/urlField"
            android:text="Url"
            android:textColor="#FFFF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

        <Button
            android:id="@+id/showUrl"
            android:text="Show"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".75"/>

    </LinearLayout>

    <Button
        android:id="@+id/sendDrawable"
        android:layout_below="@id/thirdField"
        android:layout_centerHorizontal="true"
        android:text="sendDrawableImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/launchPlay"
        android:text="LaunchPlayStore"
        android:layout_below="@id/sendDrawable"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
